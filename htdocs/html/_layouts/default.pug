doctype html

include ../_utilities/variables
include ../_utilities/mixins

html.no-js(lang!=lang dir!=dir)
  head
    include head

  body(class!=`${p.l}base`)
    // wrapper
    #wrapper(class!=`${p.l}wrapper ${p.l}${page_name}`)
      != '\n'

      include header
      != '\n'

      // main
      main(role!="main" class!=`${p.l}main`)
        article(class!=`${p.l}article`)
          block content
            p content
      // /main
      != '\n'

      include footer
      != '\n'

    // /wrapper

